generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model person {
  id               Int       @id @default(autoincrement())
  dpi              String    @unique @db.VarChar(13)
  nit              String?   @unique @db.VarChar(15)
  nombre1          String    @db.VarChar(50)
  nombre2          String?   @db.VarChar(50)
  apellido1        String    @db.VarChar(50)
  apellido2        String?   @db.VarChar(50)
  fecha_nacimiento DateTime? @db.Date
  genero           String?   @db.Char(1)
  estado_civil     String?   @db.VarChar(20)
  telefono         String?   @db.VarChar(20)
  celular          String?   @db.VarChar(20)
  email            String?   @db.VarChar(100)
  direccion        String?   @db.Text
  municipio        String?   @db.VarChar(50)
  departamento     String?   @db.VarChar(50)
  pais             String    @default("Guatemala") @db.VarChar(50)
  fecha_registro   DateTime  @default(now()) @db.Timestamp(0)
}

model rol {
  id          Int        @id @default(autoincrement())
  nombre      String     @unique(map: "nombre") @db.VarChar(50)
  descripcion String?    @db.VarChar(100)
  user_rol    user_rol[]
}

model user {
  id         Int        @id @default(autoincrement())
  username   String     @unique(map: "username") @db.VarChar(50)
  password   String     @db.VarChar(255)
  email      String     @unique(map: "email") @db.VarChar(100)
  created_at DateTime?  @default(now()) @db.Timestamp(0)
  user_rol   user_rol[]
}

model user_rol {
  user_id Int
  rol_id  Int
  user    user @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "user_rol_ibfk_1")
  rol     rol  @relation(fields: [rol_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "user_rol_ibfk_2")

  @@id([user_id, rol_id])
  @@index([rol_id], map: "rol_id")
}
